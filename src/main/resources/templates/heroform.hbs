{{> layout.hbs}}

<div class="card">
    <h5 class="card-header">Create a superhero</h5>
    <div class="card-body">
        <form action="/heroes"  method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control " type="text" name="name" id="name" placeholder="Hero's name">
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input class="form-control" type="number" name="age" id="age" placeholder="Hero's age">
            </div>
            <div class="form-group">
                <label for="power">Hero's special power </label>
                <input class="form-control" type="text"  name="power" id="power"placeholder="Hero's special power">
            </div>
            <div class="form-group">
                <label for="weakness">Hero's weakness</label>
                <input class="form-control" type="text" name="weakness" id="weakness" placeholder="Hero's weakness">
            </div>

            <button type="submit" class="btn btn-dark">Submit</button>
        </form>
    </div>
</div>



